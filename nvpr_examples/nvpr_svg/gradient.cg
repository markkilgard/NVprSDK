
void radial_focal_gradient(float3 str : TEXCOORD0.CENTROID,
                     float4 c : COLOR.CENTROID,

                 out float4 color : COLOR,

             uniform sampler1D ramp : TEXUNIT0)
{
  color = c*tex1D(ramp, length(str.xy) + str.z);
}

